@article{walters_anadromous_2009,
	title = {Anadromous alewives ( \textit{{Alosa} pseudoharengus} ) contribute marine-derived nutrients to coastal stream food webs},
	volume = {66},
	issn = {0706-652X, 1205-7533},
	url = {http://www.nrcresearchpress.com/doi/10.1139/F09-008},
	doi = {10.1139/F09-008},
	abstract = {Diadromous fish are an important link between marine and freshwater food webs. Pacific salmon ( Oncorhynchus spp.) strongly impact nutrient dynamics in inland waters and anadromous alewife ( Alosa pseudoharengus ) may play a similar ecological role along the Atlantic coast. The annual spawning migration of anadromous alewife contributes, on average, 1050 g of nitrogen and 120 g of phosphorus to Bride Brook, Connecticut, USA, through excretion and mortality each year. Natural abundance stable isotope analyses indicate that this influx of marine-derived nitrogen is rapidly incorporated into the stream food web. An enriched δ
