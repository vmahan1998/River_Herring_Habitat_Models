	language = {en},
	number = {3},
	urldate = {2023-04-02},
	journal = {Canadian Journal of Fisheries and Aquatic Sciences},
	author = {Walters, Annika W. and Barnes, Rebecca T. and Post, David M.},
	month = mar,
